{
  "name": "jotai-sync-scope",
  "version": "0.0.1",
  "description": "Library for syncing Jotai atoms",
  "keywords": [
    "jotai",
    "react",
    "scope",
    "sync"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheAsda/jotai-sync-store.git"
  },
  "license": "MIT",
  "author": "Andrey Kiselev",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll",
    "cosmos": "cosmos",
    "test": "vitest run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "jotai": "^2.8.0",
    "jsdom": "^24.0.0",
    "pkgroll": "^2.0.2",
    "react": "^18.3.1",
    "react-cosmos": "^6.1.1",
    "react-cosmos-plugin-vite": "^6.1.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "jotai": "^2",
    "react": "^18"
  },
  "publishConfig": {
    "access": "public"
  }
}
